<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.MaterialComponents.DayNight">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ViewSwitcher
            android:id="@+id/chart_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <com.taosif7.android.ringchartlib.RingChart
                android:id="@+id/Chart_concentric"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:visibility="gone"
                app:RingChartSecondaryColor="@color/colorUnselected" />

            <com.taosif7.android.ringchartlib.RingChart
                android:id="@+id/Chart_overlap"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:visibility="gone"
                app:RingChartSecondaryColor="@color/colorUnselected" />

        </ViewSwitcher>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/chart_holder"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Tap on the chart to change type"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

        <LinearLayout
            android:id="@+id/anim_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/chart_holder"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Animation: " />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/animationStartBtn"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Start" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/animationStopBtn"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop" />

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/anim_buttons"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="10dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/label_red"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:background="@drawable/rounded_box"
                    android:backgroundTint="@color/red"
                    android:gravity="center"
                    android:text="5%" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.TextButton.Dialog.Flush"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:onClick="changeValue"
                    android:tag="red"
                    android:text="+1%" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:onClick="changeValue"
                    android:tag="red"
                    android:text="+5%" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:onClick="changeValue"
                    android:tag="red"
                    android:text="-1%" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:onClick="changeValue"
                    android:tag="red"
                    android:text="-5%" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/label_blue"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:background="@drawable/rounded_box"
                    android:backgroundTint="@color/blue"
                    android:gravity="center"
                    android:text="5%" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:onClick="changeValue"
                    android:tag="blue"
                    android:text="+1%" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:onClick="changeValue"
                    android:tag="blue"
                    android:text="+5%" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:onClick="changeValue"
                    android:tag="blue"
                    android:text="-1%" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:onClick="changeValue"
                    android:tag="blue"
                    android:text="-5%" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/label_green"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:background="@drawable/rounded_box"
                    android:backgroundTint="@color/green"
                    android:gravity="center"
                    android:text="5%" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:onClick="changeValue"
                    android:tag="green"
                    android:text="+1%" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:onClick="changeValue"
                    android:tag="green"
                    android:text="+5%" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:onClick="changeValue"
                    android:tag="green"
                    android:text="-1%" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:onClick="changeValue"
                    android:tag="green"
                    android:text="-5%" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/label_yellow"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:background="@drawable/rounded_box"
                    android:backgroundTint="@color/yellow"
                    android:gravity="center"
                    android:text="5%" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:onClick="changeValue"
                    android:tag="yellow"
                    android:text="+1%" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:onClick="changeValue"
                    android:tag="yellow"
                    android:text="+5%" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:onClick="changeValue"
                    android:tag="yellow"
                    android:text="-1%" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:onClick="changeValue"
                    android:tag="yellow"
                    android:text="-5%" />

            </TableRow>

        </TableLayout>

    </RelativeLayout>

</ScrollView>

